<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_text_from_event_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_register_event_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_event_bus"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@id/tv_text_from_event_bus"
            app:layout_constraintStart_toStartOf="@id/tv_text_from_event_bus"
            app:layout_constraintTop_toBottomOf="@id/tv_text_from_event_bus" />

        <Button
            android:id="@+id/btn_jump_second_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intent_to_another_activity"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@id/btn_register_event_bus"
            app:layout_constraintStart_toStartOf="@id/btn_register_event_bus"
            app:layout_constraintTop_toBottomOf="@id/btn_register_event_bus" />

        <Button
            android:id="@+id/btn_unregister_event_bus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unregister_event_bus"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@id/btn_jump_second_activity"
            app:layout_constraintStart_toStartOf="@id/btn_jump_second_activity"
            app:layout_constraintTop_toBottomOf="@id/btn_jump_second_activity" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>